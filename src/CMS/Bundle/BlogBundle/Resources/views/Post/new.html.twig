{% extends "::layout.html.twig" %}


{% block content %}

    <form action="{{ path('post_new') }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
    
        {{ form_row(form.title) }}
        {{ form_row(form.body) }}
        {{ form_row(form.image) }}
        
        {{ form_rest(form) }}
    
        <input type="submit" />
    </form>

{% endblock %}