{% block field_row %}
{% spaceless %}
    <div class="form_row">
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form, {'value': value}) }}
    </div>
{% endspaceless %}
{% endblock field_row %}

{% block field_widget %}
    {% set type = type|default('text') %}
    
    {% if type == 'file' %}
    <div class="file">{{ value }}</div>
    {% endif %}
    <input type="{{ type }}" {{ block('attributes') }} value="{{ value }}" />
    
{% endblock field_widget %}