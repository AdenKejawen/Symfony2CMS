<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        
        <!-- CoreExtension -->
        <service id="form.type.file" class="CMS\System\Component\Form\Extension\Core\Type\FileType">
            <tag name="form.type" alias="file" />
        </service>
        
        <service id="form.type.image" class="CMS\System\Component\Form\Extension\Core\Type\ImageType">
            <tag name="form.type" alias="image" />
        </service>
        
    </services>
    
</container>
